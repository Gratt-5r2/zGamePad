// Run + punch
KeyRecord
  Combination JOY_LSTICK_UP, JOY_RT
  Emulation   GAME_ACTION
  Condition   Cond_FightModeMelee, !Cond_InterfaceIsOpen
  
// Left punch
KeyRecord
  Combination JOY_LB
  Emulation   GAME_LEFT, GAME_ACTION
